<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nanodegree.diego.popularmovies.MovieDetailsActivity">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/movie_details_item_padding"
        android:layout_alignParentStart="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/ivPoster"
        android:layout_toEndOf="@id/ivPoster">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/movieTitleContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/movie_details_item_padding">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/movieTitle"
                    android:textSize="@dimen/movie_details_text_size"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvMovieTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/movie_details_text_size"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/movieReleaseDateContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/movie_details_item_padding">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/movieReleaseDate"
                    android:textSize="@dimen/movie_details_text_size"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvMovieDateRelease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/movie_details_text_size"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/movieVoteAverageContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/movie_details_item_padding">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/movieVoteAverage"
                    android:textSize="@dimen/movie_details_text_size"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvMovieVoteAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/movie_details_text_size"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/movieDescriptionContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/movie_details_item_padding">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/movieSynopsis"
                    android:textSize="@dimen/movie_details_text_size"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvMovieSynopsis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/movie_details_text_size"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
